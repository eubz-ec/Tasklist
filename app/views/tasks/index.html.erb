
<h1>Task List</h1>
 
<%= link_to 'New Task', new_task_path %>
<table>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td colspan="6"></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
       <td><%= link_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete task?' } %></td>
    </tr>
  <% end %>
</table>